<?xml version="1.0" encoding="UTF-8"?>
<window id="115">
	<defaultcontrol>-</defaultcontrol>
	<zorder>0</zorder>
	<visible>Player.Seeking | Player.DisplayAfterSeek | Player.Forwarding | Player.Rewinding | Player.Paused | Player.Caching | Window.IsActive(FullscreenInfo)</visible>
			
	<controls>
		<control type="group">
			<left>0</left>
			<top>0</top>
			<visible>Window.IsActive(FullScreenVideo) + Player.Paused + Skin.HasSetting(ShowFullscreenVideoPaused)</visible>
			<include>MediaViewOpenCloseAnim</include>
			
			<control type="image">
				<include>ScreenSize</include>
				<texture border="0,0,50,50">black.png</texture>
				<animation effect="fade" condition="true" end="55">Conditional</animation>
			</control>
			
			<control type="label">
				<top>250</top>
				<width>1280</width>
				<font>PausedFont</font>
				<label>[B]$LOCALIZE[112][/B]</label>
				<textcolor>white</textcolor>
				<align>center</align>
				<animation effect="fade" condition="true" end="50">Conditional</animation>
				<visible>!Window.IsActive(subtitlesearch)</visible>
			</control>
		</control>
		
		<control type="group">
			<visible>![Window.IsVisible(VideoOSD) | Window.IsVisible(MusicOSD) | Skin.HasSetting(HideSeekBarOSD)]</visible>
		
			<control type="image">
				<description>Cover</description>
				<left>25</left>
				<bottom>0</bottom>
				<width>290</width>
				<height>162</height>
				<texture>$VAR[ClearImageOSD1]</texture>
				<aspectratio align="left" aligny="bottom">keep</aspectratio>
				<include>BottomPaneOpenCloseAnim</include>
				<visible>Window.IsActive(FullscreenVideo) + Player.Paused + !Window.IsActive(FullscreenInfo)</visible>
			</control>
			
			<control type="group" id="682">
				<left>772</left>
				<top>655</top>
				<visible>Window.IsActive(FullscreenVideo) | Window.IsActive(Visualisation)</visible>
				<include>FSSeekBar</include>
				<include>BottomPaneOpenCloseAnim</include>
				
				<control type="progress">
					<description>Progressbar Cache</description>
					<left>37</left>
					<top>39</top>
					<width>412</width>
					<midtexture border="2">controls/scrollbar-slider-horz-nofocus.png</midtexture>
					<info>Player.ProgressCache</info>
					<animation effect="fade" end="20" condition="true">Conditional</animation>
				</control>
					
				<control type="progress">
					<description>Progressbar</description>
					<left>37</left>
					<top>39</top>
					<width>412</width>
					<info>Player.Progress</info>
				</control>
				
				<control type="grouplist">
					<left>37</left>
					<top>6</top>
					<height>40</height>
					<width>400</width>
					<usecontrolcoords>true</usecontrolcoords>
					<orientation>horizontal</orientation>
					<control type="label">
						<description>Elapsed/Duration Time</description>
						<top>5</top>
						<width min="0" max="250">auto</width>
						<font>OSDFont</font>
						<textcolor>ProgressColor</textcolor>
						<label>$INFO[VideoPlayer.Time] $INFO[Player.Duration,/ ]</label>
					</control>
					<control type="label">
						<description>SeekbarLabels</description>
						<top>5</top>
						<width min="0" max="250">auto</width>
						<font>OSDFont</font>
						<textcolor>SelectedColor2</textcolor>
						<textoffsetx>5</textoffsetx>
						<label>$VAR[SeekbarLabels]</label>
					</control>
				</control>

				<control type="grouplist">
					<description>Finish Time</description>
					<right>59</right>
					<top>6</top>
					<height>40</height>
					<width>200</width>
					<align>right</align>
					<usecontrolcoords>true</usecontrolcoords>
					<orientation>horizontal</orientation>
					<visible>Window.IsActive(FullScreenVideo)</visible>
					<control type="image">
						<top>5</top>
						<width>28</width>
						<height>28</height>	
						<texture>gui/notification-done.png</texture>
						<bordersize>2</bordersize>
					</control>
					<control type="label">
						<top>5</top>
						<width min="0" max="172">auto</width>
						<font>OSDFont</font>
						<textcolor>ProgressColor2</textcolor>
						<label>$INFO[Player.FinishTime]</label>
					</control>
				</control>
				
				<control type="grouplist">
					<description>Playlist</description>
					<right>59</right>
					<top>6</top>
					<height>40</height>
					<width>200</width>
					<align>right</align>
					<usecontrolcoords>true</usecontrolcoords>
					<orientation>horizontal</orientation>
					<visible>Window.IsActive(Visualisation)</visible>
					<control type="image">
						<top>5</top>
						<width>28</width>
						<height>28</height>	
						<texture>gui/notification-playlist.png</texture>
						<bordersize>2</bordersize>
					</control>
					<control type="label">
						<top>5</top>
						<width min="0" max="172">auto</width>
						<font>OSDFont</font>
						<textcolor>ProgressColor2</textcolor>
						<label>$INFO[MusicPlayer.PlaylistPosition] $INFO[MusicPlayer.PlaylistLength,/ ]</label>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>